<?xml version="1.0" encoding="utf-8"?> <!--    DAY LA FRAME 23-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TotalCaloriesActivity"
    android:background="@color/gray">

    <TextView
        android:id="@+id/text_breakfast"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Breakfast"
        android:textSize="16dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/text_lunch"
        android:layout_marginTop="170dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Lunch"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:gravity="left|center_vertical"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/text_dinner"
        android:layout_marginTop="240dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Dinner"
        android:textSize="16dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/text_snacks"
        android:layout_marginTop="310dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Snacks"
        android:gravity="left|center_vertical"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/text_total_calories"
        android:layout_marginTop="380dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Total"
        android:textSize="16dp"
        android:gravity="left|center_vertical"
        android:textColor="#0099FF"
        android:paddingLeft="10dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/text_amount_breakfast"
        android:layout_marginTop="100dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="0 calo"
        android:textSize="16dp"
        android:gravity="right|center_vertical"
        android:textColor="@color/black"
        android:layout_marginLeft="300dp"
        android:padding="15dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/text_amount_lunch"
        android:layout_marginTop="170dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="0 calo"
        android:textSize="16dp"
        android:gravity="right|center_vertical"
        android:textColor="@color/black"
        android:layout_marginLeft="300dp"
        android:padding="15dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/text_amount_dinner"
        android:layout_marginTop="240dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="0 calo"
        android:textSize="16dp"
        android:gravity="right|center_vertical"
        android:textColor="@color/black"
        android:layout_marginLeft="300dp"
        android:padding="15dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/text_amount_snacks"
        android:layout_marginTop="310dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="0 calo"
        android:textSize="16dp"
        android:gravity="right|center_vertical"
        android:padding="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="300dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/text_amount_total_calories"
        android:layout_marginTop="380dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="0 calo"
        android:padding="15dp"
        android:textSize="16dp"
        android:gravity="right|center_vertical"
        android:textColor="#0099FF"
        android:layout_marginLeft="300dp"
        android:background="@color/white"/>

</FrameLayout>