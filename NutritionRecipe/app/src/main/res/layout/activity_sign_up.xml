<?xml version="1.0" encoding="utf-8"?> <!--DAY LA FRAME 24-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:layout_centerHorizontal="true">

    <include
        android:id="@+id/tool"
        layout="@layout/toolbar_signup"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Username"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/username_txt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tv_border"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:hint="Type your Username"
        android:layout_below="@+id/username"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_txt"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:text="Password"
        android:textSize="18dp"
        android:textColor="@color/black"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_txt_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/password_txt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/password"
            android:background="@drawable/tv_border"
            android:textColor="@color/black"
            android:hint="Type your Password"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/retype_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_txt_signup"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:text="Confirm Password"
        android:textSize="18dp"
        android:textColor="@color/black"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/retype_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retype_password"
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/retype_password_txt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/tv_border"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:hint="Type your Password again"
            android:layout_below="@+id/retype_password"
            android:maxLines="2"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retype_password_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:text="Sex"
        android:textSize="18dp"
        android:textColor="@color/black"/>

    <Spinner
        android:id="@+id/planets_spinner"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/sex"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/birthday"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retype_password_layout"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="60dp"
        android:text="Birthday"
        android:textSize="18dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/datePickerButton"
        style="?android:spinnerStyle"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_below="@+id/birthday"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="250dp"
        android:text="JAN 01 2020"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#0099FF"
        android:text="Register"
        android:id="@+id/enter_sign_up"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="20dp"/>

</RelativeLayout>