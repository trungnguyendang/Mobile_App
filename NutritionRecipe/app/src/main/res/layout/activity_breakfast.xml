<?xml version="1.0" encoding="utf-8"?> <!--DAY LA FRAME 6-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".BreakfastActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_total_breakfast_addfood"
            android:id="@+id/tool"
            />

        <EditText
            android:id="@+id/search_breakfast"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/my_border_button2"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:hint="Type the food you want"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_breakfast"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            />

    </RelativeLayout>
</ScrollView>